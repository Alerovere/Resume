	journal = {PLoS ONE},
	note = {ISBN: 1111111111},
	number = {6 June},
	pages = {1--25},
	pmid = {34106961},
	title = {The 'wickedness' of governing land subsidence: {Policy} perspectives from urban southeast {Asia}},
	volume = {16},
	year = {2021},
