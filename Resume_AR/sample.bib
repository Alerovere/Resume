	journal = {Aquatic Botany},
	keywords = {Mediterranean Sea, SEAMAP, Diachronic analysis, Mapping, Posidonia oceanica, Seagrass, Side Scan Sonar},
	note = {ISBN: 0304-3770 ST - Evaluating change in seagrass meadows: A time-framed comparison of Side Scan Sonar maps Publisher: Elsevier B.V.},
	number = {C},
	pages = {36--44},
	title = {Reprint of "{Evaluating} change in seagrass meadows: {A} time-framed comparison of {Side} {Scan} {Sonar} maps"},
