	journal = {Ecological Indicators},
	keywords = {Mediterranean Sea, Cartography, Ecosystem status, Ecosystem-based management, Marine spatial planning, Multiple stressors, Random forests},
	note = {ISBN: 1470-160X Publisher: Elsevier Ltd},
	pages = {253--263},
	title = {Understanding relationships between conflicting human uses and coastal ecosystems status: {A} geospatial modeling approach},
	volume = {19},
